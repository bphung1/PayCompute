@model EmployeeDeleteViewModel

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Employee List</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Delete Employee</li>
                </ol>
            </nav>
            <br />
            <br />
            <h2 style="color: red">Are you sure you want to delete this employee?</h2>
            <form method="post" enctype="multipart/form-data" asp-action="Delete">

                <div class="form-group">
                    <div class="form-group">
                        <input asp-for="FullName" class="form-control font-weight-bolder" readonly style="background-color: #293043"/>
                    </div>

                    <button type="submit" class="btn btn-rounded btn-primary float-right"><i class="fas fa-trash-alt" style="margin-right:0.7em"></i>Delete</button>
                    <a asp-action="Index" class="btn btn-rounded btn-success float-left"><i class="fas fa-arrow-left" style="margin-right:0.7em"></i>Back</a>
                    <br />
                    <br />
                    <br />
                </div>
            </form>
        </div>
    </div>
</div>
